@using doccure.Data.Models;

@{

	var user = (Applicationuser)ViewData["User"];
	var useraddress = user.address;

}

<!-- Breadcrumb -->
<div class="breadcrumb-bar">
	<div class="container-fluid">
		<div class="row align-items-center">
			<div class="col-md-12 col-12">
				<nav aria-label="breadcrumb" class="page-breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
						<li class="breadcrumb-item active" aria-current="page">Profile Settings</li>
					</ol>
				</nav>
				<h2 class="breadcrumb-title">Profile Settings</h2>
			</div>
		</div>
	</div>
</div>
<!-- /Breadcrumb -->
<!-- Page Content -->
<div class="content">
	<div class="container-fluid">
		<div class="row">

			<!-- Profile Sidebar -->
			<div class="col-md-5 col-lg-4 col-xl-3 theiaStickySidebar">
				<div class="profile-sidebar">
					<div class="widget-profile pro-widget-content">
						<div class="profile-info-widget">
							<a href="#" class="booking-doc-img">
								<img src="assets/img/patients/patient.jpg" alt="User Image">
							</a>
							<div class="profile-det-info">
								<h3>@user.UserName</h3>
								<div class="patient-details">
									<h5><i class="fas fa-birthday-cake"></i> @user.DateofBirth</h5>
									<h5 class="mb-0"><i class="fas fa-map-marker-alt"></i> @user?.address?.Address1</h5>
								</div>
							</div>
						</div>
					</div>
					<div class="dashboard-widget">
						<nav class="dashboard-menu">
							<ul>
								<li>
									<a href="#">
										<i class="fas fa-columns"></i>
										<span>Dashboard</span>
									</a>
								</li>
								<li>
									<a href="favourites.html">
										<i class="fas fa-bookmark"></i>
										<span>Favourites</span>
									</a>
								</li>
								<li>
									<a href="chat.html">
										<i class="fas fa-comments"></i>
										<span>Message</span>
										<small class="unread-msg">23</small>
									</a>
								</li>
								@*<li class="active">*@
								<li >

									<a asp-controller="UserProfile" asp-action="UserProfile">
										<i class="fas fa-user-cog"></i>
										<span>Profile Settings</span>
									</a>
								</li>
								<li>
									<a asp-controller="UserProfile" asp-action="UserPasswordUpdated">
										<i class="fas fa-lock"></i>
										<span>Change Password</span>
									</a>
								</li>
								<li>
									
									<a asp-controller="UserAuthuntication" asp-action="logout">
										<i class="fas fa-sign-out-alt"></i>
										<span>Logout</span>
									</a>
								</li>
							</ul>
						</nav>
					</div>

				</div>
			</div>
