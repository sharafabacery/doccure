@{
	@using doccure.Data.Models;
	@model doccure.Data.RequestModels.SpecialityRequest;

}
<!-- Edit Details Modal -->
			<div class="modal fade" id="edit_specialities_details" aria-hidden="true" role="dialog">
				<div class="modal-dialog modal-dialog-centered" role="document" >
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title">Edit Specialities</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
				<form asp-action="EditSpeciality" asp-controller="Specialities" enctype="multipart/form-data">
					<input asp-for="Id" type="number" class="form-control Speciality-Id" readonly="readonly">
					<div class="row form-row">
									<div class="col-12 col-sm-6">
										<div class="form-group">
											<label>Specialities</label>
								<input asp-for="Speciality.Name" type="text" class="form-control Speciality-Name">
										</div>
									</div>
									<div class="col-12 col-sm-6">
										<div class="form-group">
											<label>Image</label>
								<input asp-for="ImageFile" type="file" class="form-control">
										</div>
									</div>

								</div>
					<button  type="submit" class="btn btn-primary btn-block ">Save Changes</button>
							</form>
						</div>
					</div>
				</div>
			</div>
			<!-- /Edit Details Modal -->