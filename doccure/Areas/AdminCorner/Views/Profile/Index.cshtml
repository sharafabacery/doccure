@using doccure.Data.Models;
@model doccure.Data.RequestModels.AdminProfileRequest;

@{
	var user = (Applicationuser)ViewData["User"];
	var useraddress = user.address;

}
<div class="main-wrapper">

	<partial name="_Header" />
	<partial name="_AdminSidebar" /><!-- /Sidebar -->
	<!-- Page Wrapper -->
	<div class="page-wrapper">
		<div class="content container-fluid">

			<!-- Page Header -->
			<div class="page-header">
				<div class="row">
					<div class="col-sm-12">
						<h3 class="page-title">Profile</h3>
						<ul class="breadcrumb">
							<li class="breadcrumb-item"><a  asp-area="AdminCorner" asp-controller="Home" asp-action="Index">Dashboard</a></li>
							<li class="breadcrumb-item active">Profile</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row">
						<div class="col-md-12">
							<div class="profile-header">
								<div class="row align-items-center">
									<div class="col-auto profile-image">
										<a href="#">
											<img class="rounded-circle" alt="User Image" src="~/img/uploads/@user.Image">
										</a>
									</div>
									<div class="col ml-md-n2 profile-user-info">
										<h4 class="user-name mb-0">@user.FirstName @user.LastName</h4>
										<h6 class="text-muted">@user.Email</h6>
								@if (useraddress!=null)
								{
									<div class="user-Location"><i class="fa fa-map-marker"></i> @useraddress.Address1</div>
										
								}
								<div class="about-text">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</div>
							</div>
									<div class="col-auto profile-btn">

										<a href="#" class="btn btn-primary">
											Edit
										</a>
									</div>
								</div>
							</div>
							<div class="profile-menu">
								<ul class="nav nav-tabs nav-tabs-solid">
									<li class="nav-item">
										<a class="nav-link active" data-toggle="tab" href="#per_details_tab">About</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" data-toggle="tab" href="#password_tab">Password</a>
									</li>
								</ul>
							</div>	
							<div class="tab-content profile-tab-cont">

								<!-- Personal Details Tab -->
								<div class="tab-pane fade show active" id="per_details_tab">

									<!-- Personal Details -->
									<div class="row">
										<div class="col-lg-12">
											<div class="card">
												<div class="card-body">
													<h5 class="card-title d-flex justify-content-between">
														<span>Personal Details</span> 
														<a class="edit-link" data-toggle="modal" href="#edit_personal_details"><i class="fa fa-edit mr-1"></i>Edit</a>
													</h5>
													<div class="row">
														<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Name</p>
												<p class="col-sm-10">@user.FirstName @user.LastName</p>
													</div>
													<div class="row">
														<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Date of Birth</p>
														<p class="col-sm-10">@user.DateofBirth</p>
													</div>
													<div class="row">
														<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Email ID</p>
														<p class="col-sm-10">@user.Email</p>
													</div>
													<div class="row">
														<p class="col-sm-2 text-muted text-sm-right mb-0 mb-sm-3">Mobile</p>
														<p class="col-sm-10">@user.PhoneNumber</p>
													</div>
											@if (useraddress != null)
											{ <div class="row">
														<p class="col-sm-2 text-muted text-sm-right mb-0">Address</p>
														<p class="col-sm-10 mb-0">@useraddress.Address1<br>
														@useraddress.City,<br>
														@useraddress.State,<br>
														@useraddress.Country<br>
													</div>
												}</div>
											
											</div>

											<!-- Edit Details Modal -->
											<div class="modal fade" id="edit_personal_details" aria-hidden="true" role="dialog">
												<div class="modal-dialog modal-dialog-centered" role="document" >
													<div class="modal-content">
														<div class="modal-header">
															<h5 class="modal-title">Personal Details</h5>
															<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																<span aria-hidden="true">&times;</span>
															</button>
														</div>
														<div class="modal-body">
													<form asp-action="Index" asp-controller="Profile" enctype="multipart/form-data">
														<div class="upload-img">
															<div class="change-photo-btn">
																<span><i class="fa fa-upload"></i> Upload Photo</span>
																<input asp-for="UserProfileRequest.ImageFile" type="file" class="upload">
															</div>
															<small class="form-text text-muted">Allowed JPG, GIF or PNG. Max size of 2MB</small>
														</div>
																<div class="row form-row">
																	<div class="col-12 col-sm-6">
																		<div class="form-group">
																			<label>First Name</label>
																	<input asp-for="UserProfileRequest.FirstName" type="text" class="form-control" value="@user.FirstName">
																		</div>
																	</div>
																	<div class="col-12 col-sm-6">
																		<div class="form-group">
																			<label>Last Name</label>
																	<input asp-for="UserProfileRequest.LastName" type="text" class="form-control" value="@user.LastName">
																		</div>
																	</div>
																	<div class="col-12">
																		<div class="form-group">
																			<label>Date of Birth</label>
																			<div class="cal-icon">
																		<input asp-for="UserProfileRequest.DateofBirth" type="text" class="form-control" value="@user.DateofBirth">
																			</div>
																		</div>
																	</div>
																	<div class="col-12 col-sm-6">
																		<div class="form-group">
																			<label>Email ID</label>
																	<input asp-for="UserProfileRequest.Email" type="email" class="form-control" value="@user.Email">
																		</div>
																	</div>
																	<div class="col-12 col-sm-6">
																		<div class="form-group">
																			<label>Mobile</label>
																	<input asp-for="UserProfileRequest.PhoneNmber" type="text" value="@user.PhoneNumber" class="form-control">
																		</div>
																	</div>
																	<div class="col-12">
																		<h5 class="form-title"><span>Address</span></h5>
																	</div>
																	<div class="col-12">
																		<div class="form-group">
																		<label>Address</label>
																	<input asp-for="UserProfileRequest.Address1.Address1" type="text" class="form-control" value="@useraddress?.Address1">
																		</div>
																	</div>
																	<div class="col-12 col-sm-6">
																		<div class="form-group">
																			<label>City</label>
																	<input asp-for="UserProfileRequest.Address1.City" type="text" class="form-control" value="@useraddress?.City">
																		</div>
																	</div>

															<div class="col-12 col-sm-6">
																<div class="form-group">
																	<label>State</label>
																	<input asp-for="UserProfileRequest.Address1.State" type="text" class="form-control" value="@useraddress?.State">
																</div>
															</div>
																	<div class="col-12 col-sm-6">
																		<div class="form-group">
																			<label>Country</label>
																	<input asp-for="UserProfileRequest.Address1.Country" type="text" class="form-control" value="@useraddress?.Country">
																		</div>
																	</div>
															<div class="col-12 col-sm-6">
																<div class="form-group">
																	<label>PostalCode</label>
																	<input asp-for="UserProfileRequest.Address1.PostalCode" type="text" class="form-control" value="@useraddress?.PostalCode">
																</div>
															</div>
																</div>
																<button type="submit" class="btn btn-primary btn-block">Save Changes</button>
															</form>
														</div>
													</div>
												</div>
											</div>
											<!-- /Edit Details Modal -->

										</div>


									</div>
									<!-- /Personal Details -->

								</div>
								<!-- /Personal Details Tab -->

								<!-- Change Password Tab -->
								<div id="password_tab" class="tab-pane fade">

									<div class="card">
										<div class="card-body">
											<h5 class="card-title">Change Password</h5>
											<div class="row">
												<div class="col-md-10 col-lg-6">
											<form asp-action="AdminPasswordUpdated" asp-controller="Profile">
														<div class="form-group">
															<label>Old Password</label>
													<input asp-for="UpdatePasswordRequset.OldPassword" type="password" class="form-control">
														</div>
														<div class="form-group">
															<label>New Password</label>
													<input asp-for="UpdatePasswordRequset.NewPassword" type="password" class="form-control">
														</div>
														<div class="form-group">
															<label>Confirm Password</label>
													<input asp-for="UpdatePasswordRequset.ConfirmPassword" type="password" class="form-control">
														</div>
														<button class="btn btn-primary" type="submit">Save Changes</button>
													</form>
												</div>
											</div>
										</div>
									</div>
								</div>
								<!-- /Change Password Tab -->

							</div>
						</div>
					</div>

				</div>			
			</div>
			<!-- /Page Wrapper -->

		</div>