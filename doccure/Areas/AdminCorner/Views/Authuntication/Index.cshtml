@model doccure.Data.RequestModels.LoginRequest
<!-- Main Wrapper -->
<div class="main-wrapper login-body">
	<div class="login-wrapper">
		<div class="container">
			<div class="loginbox">
				<div class="login-left">
					<img class="img-fluid" src="~/admin-assets/img/logo-white.png" alt="Logo">
				</div>
				<div class="login-right">
					<div class="login-right-wrap">
						<h1>Login</h1>
						<p class="account-subtitle">Access to our dashboard</p>

						<!-- Form -->
						<form asp-area="AdminCorner" asp-action="Login" asp-controller="Authuntication">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<div class="form-group form-focus">
								<label asp-for="Email" class="focus-label">Email</label>
									<input asp-for="Email" type="email" class="form-control floating">
									
								</div>
								<div class="form-group form-focus">
								<label asp-for="Password" class="focus-label">Password</label>
									<input asp-for="Password" type="password" class="form-control floating">
									
								</div>
							<div class="form-group">
								<button class="btn btn-primary btn-block" type="submit">Login</button>
							</div>
						</form>
